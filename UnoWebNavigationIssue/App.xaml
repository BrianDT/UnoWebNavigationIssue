<Application x:Class="UnoWebNavigationIssue.App"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- Load WinUI resources -->
        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
      </ResourceDictionary.MergedDictionaries>
      
      <!-- Add resources here -->
      <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
          <Color x:Key="FlyoutHyperlinkColor">Yellow</Color>
        </ResourceDictionary>

        <ResourceDictionary x:Key="Light">
          <Color x:Key="FlyoutHyperlinkColor">#FF1C192B</Color>
        </ResourceDictionary>
      </ResourceDictionary.ThemeDictionaries>

      <SolidColorBrush x:Key="FlyoutHyperlinkBrush" Color="{ThemeResource FlyoutHyperlinkColor}"/>
    </ResourceDictionary>
  </Application.Resources>

  <!-- Add resources here -->

</Application>
